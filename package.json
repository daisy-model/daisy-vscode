{
  "name": "daisy",
  "publisher": "daisy-model",
  "displayName": "Daisy",
  "description": "Syntax highlighting and runner for Daisy setup files",
  "icon": "images/icon-color-128.png",
  "version": "0.0.7",
  "repository": {
    "type": "git",
    "url": "https://github.com/daisy-model/daisy-vscode"
  },
  "author": {
    "name": "Silas Nyboe Ã˜rting",
    "email": "silas.orting@pm.me"
  },
  "license":"GPL-3.0-only",
  "engines": {
    "vscode": "^1.103.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "daisy.run",
        "title": "Run Daisy",
        "icon": {
          "dark": "images/icon.png",
          "light": "images/icon.png"
        }
      }
    ],
    "keybindings": [
      {
        "command": "daisy.run",
        "key": "F5",
        "when": "editorLangId == daisy && editorTextFocus"
      }
    ],
    "menus": {
      "editor/title/run": [
        {
          "command": "daisy.run",
          "group": "navigation",
          "when": "editorLangId == daisy"
        }
      ]
    },
    "languages": [{
      "id": "daisy",
      "aliases": ["Daisy", "daisy"],
      "extensions": [".dai"],
      "configuration": "./language-configuration.json"
    }],
    "grammars": [{
      "language": "daisy",
      "scopeName": "source.daisy",
      "path": "./syntaxes/daisy.tmLanguage.json"
    }],
    "semanticTokenScopes": [
      {
        "scopes": {
          "function": ["meta.function.daisy"],
          "variable": ["variable.other.global.daisy"]
        }
      }
    ],
    "configuration":[
      {
        "title": "Daisy",
        "properties": {
          "Daisy.home": {
            "type": "string",
            "default": "",
            "description": "Full path to Daisy installation directory containing lib/ and sample/"
          },
          "Daisy.executable": {
            "type": "array",
            "default": [],
            "description": "Name(s) and full path(s) to Daisy executable(s) given as an array of \"name\", \"path\" pairs. For example,\n[{\n\"name\": \"daisy-v7.1.0\",\n\"path\": \"/opt/Daisy-v7.1.0/bin/daisy\"\n}]"
          }
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.103.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "eslint": "^9.25.1",
    "typescript": "^5.8.3",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2"
  }
}
